{% trans_default_domain 'FOSUserBundle' %}

{% import 'macro/fos_form_row.html.twig' as macro %}

{% set form_theme = 0 %}

{% set username_error_messages = [ 'registration.js_errors.username.blank'|trans, 'registration.js_errors.username.short'|trans, 'registration.js_errors.username.regex'|trans, 'registration.js_errors.username.long'|trans ] %}
{% set email_error_messages = [ 'registration.js_errors.email.blank'|trans, 'registration.js_errors.email.regex'|trans ] %}
{% set password_error_messages = [ 'registration.js_errors.password.blank'|trans, 'registration.js_errors.password.short'|trans, 'registration.js_errors.password.regex'|trans ] %}

<div class="col-lg-12">

    {{ form_start(
        form,
        {
            'method': 'post',
            'action': path('fos_user_registration_register'),
            'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}
        }
    )  }}

    {{ macro.print_fos_register_form_row(form.username, username_error_messages) }}
    {{ macro.print_fos_register_form_row(form.email, email_error_messages) }}
    {{ macro.print_fos_register_form_row(form.plainPassword.first, password_error_messages) }}
    {{ macro.print_fos_register_form_row(form.plainPassword.second) }}


    <div>
        <input class="btn btn-primary btn-block" formnovalidate type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>

    {{ form_end(form) }}

</div>
